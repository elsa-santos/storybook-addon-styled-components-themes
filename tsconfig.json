{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./lib/",
    "sourceMap": false,
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es5",
    "downlevelIteration": true,
    "jsx": "react",
    "typeRoots": ["./node_modules/@types"],
    "removeComments": true
  },
  "exclude": ["lib", "node_modules"]
}
